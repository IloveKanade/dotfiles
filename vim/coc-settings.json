{
  // update funtion symbol for statusline
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.colorSupport": true,
  "suggest.enablePreview": true,
  "suggest.echodocSupport": true,
  // "diagnostic.displayByAle": true,
  // go languageserver
  "languageserver": {
    "golang": {
      "command": "/Users/Liao/Projects/go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  // coc-snippets config
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "snippets.ultisnips.directories": [
    "UltiSnips"
  ],
  // coc-viml config
  "vimlsp.debug": false,
  "vimlsp.trace.server": "off",
  // coc-list
  "list.normalMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "t": "action:tabe",
    "v": "action:vsplit",
    "s": "action:split",
    "d": "expr:GetDeleteAction"
  },
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-m>": "do:switch",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-w>": "command:wincmd k"
  },
  // coc-git
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGlameToVirtualText": true,
  "git.addGlameToBufferVar": true,
  // coc-yank
  "yank.highlight.duration": 350
}
